TARGET = template

#Toolchain
#-------------------------------------------------------------------------------
AS = arm-none-eabi-gcc
CC = arm-none-eabi-gcc
LD = arm-none-eabi-g++
CP = arm-none-eabi-objcopy
SZ = arm-none-eabi-size
RM = rm
CXX = arm-none-eabi-g++
#GDB = arm-none-eabi-gdb
#OCD = openocd
#-------------------------------------------------------------------------------

#GCC config
#-------------------------------------------------------------------------------
CFLAGS += -D_ROM=65536
CFLAGS += -D_RAM=20480
CFLAGS += -D_ROM_OFF=0x08000000
CFLAGS += -D_RAM_OFF=0x20000000
CFLAGS += -mcpu=cortex-m3
CFLAGS += -mthumb
CFLAGS += -DSTM32F1
CFLAGS += -msoft-float
#-------------------------------------------------------------------------------

#startup file
#-------------------------------------------------------------------------------
STARTUP = startup_stm32f103xb.s
#-------------------------------------------------------------------------------
 
#Source path
#-------------------------------------------------------------------------------
SOURCEDIRS := src
#-------------------------------------------------------------------------------
 
#Header path
#-------------------------------------------------------------------------------
INCLUDES += inc
INCLUDES += include
#-------------------------------------------------------------------------------